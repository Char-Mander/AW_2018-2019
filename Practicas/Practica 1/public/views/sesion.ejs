            <div class="contenedor_ventana">

                <div class="titulo_ventana">
                    <h2>Tu perfil</h2>
                </div>

                <div class="contenedor_datos">
                    <div class="imagen_usuario">
                        <% if(user.imagen_perfil !== null){ %>
                        <img src="/imagen/<%= user.id_user %>" <% } else { %>
                        <img src="/no_profile_pic">
                        <% } %>
                    </div>
                    <div class="datos">
                        <div class="datos">
                            <div class="elem nombre_usuario">
                                <h3>
                                    <%= user.nombre_completo %>
                                </h3>
                            </div>
                            <div class="elem edad_usuario">
                                <h4>
                                    <%= user.edad %> a√±os </h4>
                            </div>
                            <div class="elem sexo_usuario">
                                <h4>
                                    <%= user.sexo %>
                                </h4>
                            </div>
                            <div class="elem puntos_usuario">
                                <h4>
                                    <%= user.puntos %> puntos</h4>
                            </div>
                        </div>
                        <div class="boton">
                            <button class="boton_aceptar" onclick="location.href='/modificar_perfil'"> Modificar perfil
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>