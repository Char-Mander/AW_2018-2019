<!DOCTYPE html>
<html>
<head lang="es-ES">
    <meta charset="utf-8" />
    <title>Búsqueda - FaceBluff</title>
    <link rel="stylesheet" type="text/css" media="screen" href="../css/general.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="../css/cabecera.css"/>
    <link rel="stylesheet" type="text/css" media="screen" href="../css/cuerpo_busqueda.css"/>

</head>
<body>
        <div class="contenedor">
                <div class="header">
                    <div class="titulo">
                        <h1>FaceBluff</h1>
                    </div>
                    <div class="nav">
                        <div class="enlace perfil"> <a href="sesion"> Perfil </a> </div>
                        <div class="enlace amigos"> <a href="mis_amigos"> Amigos </a> </div>
                        <div class="enlace preguntas"> <a href="preguntas.html"> Preguntas </a> </div>
                        <div class="enlace desconectar"> <a href="signin"> Desconectar </a> </div>
                        <div class="enlace puntuacion"> 
                            <div class="user_icon"></div> 
                            <div class="ptos"> <%= puntos %> ptos</div>
                        </div>
                    </div>
                </div>

                <div class="body">
                        <div class="contenedor_buscar">
                            <div class="titulo_buscar"> Resultado de la búsqueda 'e' </div>
                            <% if(amigos !== undefined && amigos.length>0) { %>
                            <ul class="lista_busqueda">
                                    <% amigos.forEach(function(amigo){ %>
                                <li>
                                    <div class="resultado 1">
                                        <div class="info_user">
                                            <div class="img"></div>
                                            <div class="nombre_solicitud"> <%= amigo %> </div>
                                        </div>
                                       <div class="botones">
                                            <button class="aceptar"> Solicitar amistad </button>
                                       </div>
                                    </div>
                                </li>
                            </ul>
                        </div>   
                </div>   
            
        </div>
    
</body>
</html>