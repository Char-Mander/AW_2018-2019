<!DOCTYPE html>
<html>

<head lang="es-ES">
    <meta charset="utf-8" />
    <title>Búsqueda - FaceBluff</title>
    <link rel="stylesheet" type="text/css" media="screen" href="../css/general.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="../css/cabecera.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="../css/cuerpo_busqueda.css" />

</head>

<body>
    <div class="contenedor">
        <div class="header">
            <div class="titulo">
                <h1>FaceBluff</h1>
            </div>
            <div class="nav">
                <div class="enlace perfil"> <a href="/users/sesion"> Perfil </a> </div>
                <div class="enlace amigos"> <a href="/amigos/mis_amigos"> Amigos </a> </div>
                <div class="enlace preguntas"> <a href="/preguntas/preguntas"> Preguntas </a> </div>
                <div class="enlace desconectar"> <a href="/users/signout"> Desconectar </a> </div>
                <div class="enlace puntuacion">
                    <div class="user_icon">
                        <% if(user.img){ %>
                        <img class="icon" src="/users/imagen/<%= user.id %>">
                        <% } else { %>
                        <img class="icon" src="/users/no_profile_pic">
                        <% } %>
                    </div>
                    <div class="ptos">
                        <%= user.puntos %> ptos</div>
                </div>
            </div>
        </div>

        <div class="body">
            <div class="contenedor_buscar">
                <div class="titulo_buscar"> Resultado de la búsqueda '
                    <%= name %>' </div>
                <% if(amigos !== undefined && amigos.length>0) { %>
                <ul class="lista_busqueda">
                    <% amigos.forEach(function(amigo){ %>
                    <li>
                        <div class="resultado 1">
                            <div class="info_user">
                                <% if(amigo.imagen_perfil !== null){ %>
                                <img class="icon" src="/users/imagen/<%= amigo.id_user %>">
                                <% } else { %>
                                <img class="icon" src="/users/no_profile_pic">
                                <% } %>
                                <div class="nombre_solicitud">
                                    <a href="/amigos/perfil_amigo?id_amigo=<%= amigo.id_user %>">
                                        <%= amigo.nombre_completo %>
                                    </a>
                                </div>
                            </div>
                            <form class="botones" method="post" action="/amigos/enviar_peticion">
                                <input type="hidden" name="id_amig" value=<%=amigo.id_user%>>
                                <button class="aceptar" type=submit> Solicitar amistad </button>
                            </form>
                        </div>
                    </li>
                    <% }); %>
                </ul>
                <% } else { %>
                <div class="sin_info">
                    <div class="no_found">
                        <%= noFoundMsg %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

    </div>

</body>

</html>